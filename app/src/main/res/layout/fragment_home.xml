<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <Button
            android:text="Send File"
            android:layout_width="176dp"
            android:layout_height="48dp" android:id="@+id/button"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.805" android:background="@drawable/buttonbg"
            android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.574"
            app:layout_constraintVertical_bias="0.68" android:background="@drawable/textinput_bg"
            android:padding="10dp"/>
    <EditText
            android:layout_width="260dp"
            android:layout_height="54dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="102dp" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintVertical_bias="0.968" android:background="@drawable/textinput_bg"
            android:padding="10dp"/>
    <ImageView
            android:src="@drawable/ic_network"
            android:layout_width="115dp"
            android:layout_height="113dp" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="124dp" android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/enter_ip"
            android:layout_width="234dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/enter_ip"
            android:textAppearance="@style/enter_ip"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/enter_ip2"
            android:layout_width="234dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/enter_path"
            android:textAppearance="@style/enter_ip"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.125"/>
</androidx.constraintlayout.widget.ConstraintLayout>